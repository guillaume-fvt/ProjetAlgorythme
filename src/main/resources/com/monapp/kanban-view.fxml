<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.monapp.controller.KanbanController"
            prefWidth="600.0" prefHeight="400.0">

    <children>
        <HBox layoutX="14.0" layoutY="14.0" spacing="20.0" AnchorPane.topAnchor="14" AnchorPane.leftAnchor="14">
            <children>
                <VBox prefWidth="150.0" spacing="5.0">
                    <children>
                        <Label text="À faire" />
                        <ListView fx:id="listAFaire" prefWidth="150.0" prefHeight="300.0" />
                    </children>
                </VBox>
                <VBox prefWidth="150.0" spacing="5.0">
                    <children>
                        <Label text="En cours" />
                        <ListView fx:id="listEnCours" prefWidth="150.0" prefHeight="300.0" />
                    </children>
                </VBox>
                <VBox prefWidth="150.0" spacing="5.0">
                    <children>
                        <Label text="Terminé" />
                        <ListView fx:id="listTermine" prefWidth="150.0" prefHeight="300.0" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
